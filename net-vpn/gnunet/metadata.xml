<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <name>ng0</name>
    <email>ng0@we.make.ritual.n0.is</email>
    <description>maintainer</description>
  </maintainer>
  <upstream>
    <bugs-to>https://gnunet.org/bugs</bugs-to>
    <doc lang="en">https://gnunet.org</doc>
  </upstream>
  <use>
    <flag name='httpd'>libmicrohttpd</flag>
    <flag name='sqlite'>use sqlite for database (default)</flag>
    <flag name='postgres'>use postgresql for database</flag>
    <flag name='mysql'>use mysql for database</flag>
    <flag name='nls'>nls</flag>
    <flag name='nss'>nss</flag>
    <flag name='bluetooth'>bluetooth</flag>
    <flag name='X'>X11 features</flag>
    <flag name='dane'>build with gnutls + dane</flag>
    <flag name='gnutls'>gnutls</flag>
    <flag name='ssl'>openssl</flag>
    <flag name='experimental'>enable experimental features</flag>
    <flag name='extra'>required IUSE for experimental features</flag>
    <flag name='pulseaudio'>build 'gnunet-conversation' with pulseaudio backend</flag>
    <flag name='gstreamer'>build 'gnunet-conversation' with gstreamer backend</flag>
    <flag name='qr'>experimental feature</flag>
    <flag name='tex'>build with texlive (pdflatex) to get 'gnunet-bcd' for business cards</flag>
    <flag name="gnurl">build with gnurl, this is prefered over building with curl.</flag>
  </use>
</pkgmetadata>
